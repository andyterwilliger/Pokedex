            <ul>
                <% for (let i=0; i < allPokemon.length-141; i++){ %>
                    <li>
                        <a href="/pokemon/<%= i %>">
                            <%= allPokemon[i].name %>
                        </a>
                    
                    <img src=' <%= allPokemon[i].img %>'>
                        <form action="/pokemon/<%= i %>?_method=DELETE" method="POST">
                            <input type="submit" value="DELETE">
                        </form>
                        <a href='/pokemon/<%= i %>/edit'>EDIT</a>
                    </li>
        </div>


        </form>



        <% } %>
            </ul>
    </body>
</div>

